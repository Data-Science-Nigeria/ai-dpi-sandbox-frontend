{
  "openapi": "3.0.3",
  "info": {
    "title": "NIN Verification Service",
    "description": "Nigerian Identity Number (NIN) verification service using Dojah API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8005",
      "description": "NIN Service"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "NINVerificationRequest": {
        "type": "object",
        "required": ["nin"],
        "properties": {
          "nin": {
            "type": "string",
            "pattern": "^[0-9]{11}$",
            "example": "12345678901",
            "description": "11-digit Nigerian Identity Number"
          }
        }
      },
      "NINVerificationResponse": {
        "type": "object",
        "properties": {
          "nin_verified": {
            "type": "boolean"
          },
          "verification_data": {
            "type": "object",
            "properties": {
              "nin": {
                "type": "string"
              },
              "first_name": {
                "type": "string"
              },
              "last_name": {
                "type": "string"
              },
              "date_of_birth": {
                "type": "string",
                "format": "date"
              },
              "gender": {
                "type": "string",
                "enum": ["Male", "Female"]
              }
            }
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/verify": {
      "post": {
        "tags": ["NIN Verification"],
        "summary": "Verify NIN using Dojah API",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NINVerificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "NIN verification result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NINVerificationResponse"
                },
                "example": {
                  "nin_verified": true,
                  "verification_data": {
                    "nin": "12345678901",
                    "first_name": "Adebayo",
                    "last_name": "Ogundimu",
                    "date_of_birth": "1990-01-15",
                    "gender": "Male"
                  },
                  "message": "NIN verified successfully"
                }
              }
            }
          },
          "400": {
            "description": "Invalid NIN format"
          },
          "500": {
            "description": "Verification service error"
          }
        }
      }
    },
    "/api/v1/lookup": {
      "post": {
        "tags": ["NIN Verification"],
        "summary": "Basic NIN lookup without full verification",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NINVerificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "NIN lookup result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NINVerificationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/status/{nin}": {
      "get": {
        "tags": ["NIN Verification"],
        "summary": "Get NIN verification status",
        "parameters": [
          {
            "name": "nin",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^[0-9]{11}$",
              "example": "12345678901"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "NIN status",
            "content": {
              "application/json": {
                "example": {
                  "message": "NIN 12345678901 status check",
                  "nin": "12345678901"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["System"],
        "summary": "Health check endpoint",
        "security": [],
        "responses": {
          "200": {
            "description": "Service health status",
            "content": {
              "application/json": {
                "example": {
                  "status": "healthy",
                  "service": "nin-service"
                }
              }
            }
          }
        }
      }
    }
  }
}