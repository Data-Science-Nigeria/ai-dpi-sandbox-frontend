{
  "openapi": "3.0.3",
  "info": {
    "title": "Two-Way SMS Service",
    "description": "Bidirectional SMS messaging service for Nigerian phone numbers",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8007",
      "description": "Two-Way SMS Service"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SendSMSRequest": {
        "type": "object",
        "required": ["to", "message"],
        "properties": {
          "to": {
            "type": "string",
            "pattern": "^\\+234[0-9]{10}$|^0[0-9]{10}$",
            "example": "+2348012345678",
            "description": "Nigerian phone number"
          },
          "message": {
            "type": "string",
            "maxLength": 160,
            "example": "Please reply with YES to confirm your transaction."
          },
          "expect_reply": {
            "type": "boolean",
            "default": true,
            "example": true,
            "description": "Whether to expect a reply from recipient"
          },
          "reply_timeout": {
            "type": "integer",
            "default": 300,
            "example": 300,
            "description": "Reply timeout in seconds"
          }
        }
      },
      "ReceiveSMSWebhook": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "example": "+2348012345678"
          },
          "to": {
            "type": "string",
            "example": "+2341234567890"
          },
          "message": {
            "type": "string",
            "example": "YES"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-15T10:30:00Z"
          },
          "message_id": {
            "type": "string",
            "example": "msg_12345"
          }
        }
      },
      "SMSResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["sent", "pending", "failed"]
          },
          "message": {
            "type": "string"
          },
          "reply_expected": {
            "type": "boolean"
          }
        }
      },
      "ConversationHistory": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "direction": {
                  "type": "string",
                  "enum": ["outbound", "inbound"]
                },
                "message": {
                  "type": "string"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                },
                "message_id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/send": {
      "post": {
        "tags": ["Two-Way SMS"],
        "summary": "Send SMS and optionally expect reply",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendSMSRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "SMS sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SMSResponse"
                },
                "example": {
                  "success": true,
                  "message_id": "msg_12345",
                  "status": "sent",
                  "message": "Two-way SMS sent successfully",
                  "reply_expected": true
                }
              }
            }
          },
          "400": {
            "description": "Invalid phone number or message"
          },
          "500": {
            "description": "SMS service error"
          }
        }
      }
    },
    "/api/v1/receive": {
      "post": {
        "tags": ["Two-Way SMS"],
        "summary": "Webhook endpoint for receiving SMS replies",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReceiveSMSWebhook"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "SMS received and processed",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "SMS received and processed",
                  "auto_reply": "Thank you for your confirmation."
                }
              }
            }
          },
          "400": {
            "description": "Invalid webhook payload"
          }
        }
      }
    },
    "/api/v1/conversation/{phone}": {
      "get": {
        "tags": ["Two-Way SMS"],
        "summary": "Get conversation history with a phone number",
        "parameters": [
          {
            "name": "phone",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "+2348012345678"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50,
              "example": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversation history",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationHistory"
                },
                "example": {
                  "phone": "+2348012345678",
                  "messages": [
                    {
                      "direction": "outbound",
                      "message": "Please reply with YES to confirm your transaction.",
                      "timestamp": "2024-01-15T10:30:00Z",
                      "message_id": "msg_12345"
                    },
                    {
                      "direction": "inbound",
                      "message": "YES",
                      "timestamp": "2024-01-15T10:32:00Z",
                      "message_id": "msg_12346"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/replies/pending": {
      "get": {
        "tags": ["Two-Way SMS"],
        "summary": "Get pending replies (messages waiting for response)",
        "responses": {
          "200": {
            "description": "List of pending replies",
            "content": {
              "application/json": {
                "example": {
                  "pending_replies": [
                    {
                      "message_id": "msg_12345",
                      "phone": "+2348012345678",
                      "sent_at": "2024-01-15T10:30:00Z",
                      "expires_at": "2024-01-15T10:35:00Z",
                      "message": "Please reply with YES to confirm your transaction."
                    }
                  ],
                  "total_count": 1
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["System"],
        "summary": "Health check endpoint",
        "security": [],
        "responses": {
          "200": {
            "description": "Service health status",
            "content": {
              "application/json": {
                "example": {
                  "status": "healthy",
                  "service": "two-way-sms-service"
                }
              }
            }
          }
        }
      }
    }
  }
}